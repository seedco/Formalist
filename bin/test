#!/bin/sh

set -e -o pipefail

xcrun xcodebuild \
  -project Formalist.xcodeproj \
  -scheme Formalist \
  -destination "platform=iOS Simulator,name=iPhone 12" \
  test \
  | xcpretty --color

xcrun xcodebuild \
  -project Formalist.xcodeproj \
  -scheme Example \
  -destination "platform=iOS Simulator,name=iPhone 12" \
  test \
  | xcpretty --color
